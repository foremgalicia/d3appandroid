<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#f0f0f0">

	<TextView android:id="@+id/elemento_titulo"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="24dp" android:textColor="#30449d"
		android:background="#f0f0f0" />
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="#f0f0f0">

			<ImageView android:id="@+id/elemento_img"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:background="#f0f0f0" />
			<WebView android:id="@+id/elemento_txt" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#ffcc00" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
