<resources>

	<style name="SeparatorItemView" parent="GreenDroid.Widget.ItemView.SeparatorItemView">
		<item name="android:background">@drawable/separator_bg</item>
	</style>

	<style name="TextAppearanceLarge" parent="@style/TextAppearance.Large">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="Ficha">
		<item name="android:background">#ffffff</item>
	</style>

	<style name="MenuFicha">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
	</style>

	<style name="ContenidoFicha">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="FilaListado">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">5dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#116490</item>
		<item name="android:background">#edf1f4</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">false</item>
		<item name="android:maxLines">5</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
	</style>

	<style name="listaRecursos">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:padding">0dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#116490</item>
		<item name="android:background">#edf1f4</item>
		<item name="android:singleLine">false</item>
		<item name="android:maxLines">3</item>
		<item name="android:ellipsize">marquee</item>
	</style>
</resources>